            <TextBlock Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" FontFamily="Segoe UI" Text="79:-"/>
            <Button  Grid.Column="2" Grid.Row="0" Background="Transparent"  Content="+"/>
        </Grid>
        
        



