<Page x:Class="alpha.CustomerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:alpha"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerView">

    <!--#region DataContext etc -->
    <Page.DataContext>
        <local:CustomerViewModel/>
    </Page.DataContext>

    <!--#endregion-->
    <Grid Background="#f9f9f9">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <WrapPanel x:Name="FilterButtonList">
                <Button Style="{StaticResource FilterButton}" Command="{Binding FilterArticles}" CommandParameter="All" Content="Hem"/>
                <Button Style="{StaticResource FilterButton}" Command="{Binding FilterArticles}" CommandParameter="Pizza" Content="Pizza"/>
                <Button Style="{StaticResource FilterButton}" Command="{Binding FilterArticles}" CommandParameter="Sallad" Content="Sallad"/>
                <Button Style="{StaticResource FilterButton}" Command="{Binding FilterArticles}" CommandParameter="Dryck" Content="Dryck"/>
            </WrapPanel>
        </StackPanel>

        <Border Grid.Column="0" Grid.Row="1" >
            <ListView ItemsSource="{Binding Articles, Mode=TwoWay}" x:Name="article_listview">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="3"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel Orientation="Vertical">
                            <Image Width="256" Height="256" Stretch="Fill" Source="https://picsum.photos/256/256"/>
                            <!--<Rectangle Stretch="Fill" Style="{StaticResource ImageRectangle}"></Rectangle>-->
                            <WrapPanel >
                                <TextBlock Text="{Binding Article.Name}"/>
                                <TextBlock Text="{Binding Article.Price}"/>
                                <Button Style="{StaticResource AddToCheckoutButton}" 
                                        Width="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=ActualHeight}" 
                                        Padding="6,12" HorizontalContentAlignment="Center" 
                                        VerticalContentAlignment="Center" 
                                        Command="{Binding ElementName=article_listview, Path=DataContext.AddToCheckout}" CommandParameter="{Binding}"/>
                            </WrapPanel>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Border>
