        <!--#endregion-->


        <StackPanel Grid.Column="1" Grid.RowSpan="2" Background="#afafaf">

            <StackPanel Margin="5,50,5,0">
                <TextBlock Text="Varukorg" FontWeight="Bold"/>
                <StackPanel>
                    <TextBlock Text="varor:"/>
                    <TextBlock Text="{Binding NumberOfItemsInCheckout, Mode=TwoWay, FallbackValue='?'}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="pris:"/>
                    <TextBlock Text="{Binding TotalPrice, Mode=TwoWay, FallbackValue='?'}"/>
                </StackPanel>
            </StackPanel>


            <ItemsControl x:Name="Checkout" ItemsSource="{Binding Checkout, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Article.Name}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

    </Grid>
</Page>
